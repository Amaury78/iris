<launch>
    <!-- parameters -->
    <arg name="vllm_config_path" default = "$(find vllm)/../config/hongo.yaml" /> 
    <arg name="pcd_path" default = "$(find vllm)/../../../hongo.pcd" /> 

    <arg name="vslam_config_path" default = "$(find vllm)/../config/openvslam.yaml" />
    <arg name="vocab_file" default = "$(find vllm)/../config/orb_vocab.dbow2" />
    <arg name="image_topic_name" default = "/camera/color/image_raw" />
    <arg name="is_image_compressed" default = "true"/>
    
    <!-- vllm_node -->
    <node name="vllm_node" pkg="vllm" type="vllm_node" output="screen">
        <param name="vllm_config_path" type="string" value="$(arg vllm_config_path)" />
        <param name="pcd_path" type="string" value="$(arg pcd_path)" />
    </node>

    <!-- openvslam_bridge_node -->
     <node name="openvslam_bridge_node" pkg="openvslam_bridge" type="openvslam_bridge_node" output="log">
       <param name="vslam_config_path" type="string" value="$(arg vslam_config_path)" />
       <param name="vocab_path" type="string" value="$(arg vocab_file)" />
       <param name="image_topic_name" type="string" value="$(arg image_topic_name)" />
       <param name="is_image_compressed" type="bool" value="$(arg is_image_compressed)" />
    </node>

    <!-- rviz -->
    <node name="rvizvisualisation" pkg="rviz" type="rviz" output="log" args="-d $(find vllm)/../config/vllm.rviz" />
</launch>
